{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>curioswitch/go-build:renovate"],
  "rangeStrategy": "bump",
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/(^|/)buf.gen.yaml$/"],
      "datasourceTemplate": "go",
      "matchStrings": [
        "# renovate: (?<depName>[^\\s]*)\\s+[^@]+@(?<currentValue>[^\\s]*)"
      ]
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "matchDepNames": ["go"],
      "matchDepTypes": ["golang"],
      "allowedVersions": ">=1"
    },
    {
      "matchCategories": ["js"],
      "groupName": "Node dependencies"
    }
  ]
}
